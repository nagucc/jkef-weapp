<view class="page">
  <view class="page__hd">
    <view class="page__title">受赠者</view>
    <view class="page__desc">
      全部列表
    </view>
  </view>
  <view class="page__bd">
  <view class="weui-search-bar">
            <view class="weui-search-bar__form">
                <view class="weui-search-bar__box">
                    <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
                    <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" />
                    <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
                        <icon type="clear" size="14"></icon>
                    </view>
                </view>
                <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
                    <icon class="weui-icon-search" type="search" size="14"></icon>
                    <view class="weui-search-bar__text">搜索</view>
                </label>
            </view>
            <view class="weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="hideInput">取消</view>
        </view>
    <view class="weui-cells__title">过滤</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">项目</view>
        </view>
        <view class="weui-cell__bd">
          <picker bindchange="bindProjectChange" value="{{selectedProjectIndex}}" range="{{projects}}">
            <view class="weui-select weui-select_in-select-after">{{projects[selectedProjectIndex]}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell weui-cell_select">
        <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">年份</view>
        </view>
        <view class="weui-cell__bd">
          <picker bindchange="bindYearChange" value="{{selectedYearIndex}}" range="{{years}}">
            <view class="weui-select weui-select_in-select-after">{{years[selectedYearIndex]}}</view>
          </picker>
        </view>
      </view>
    </view>

    <view class="weui-cells__title">受赠者列表（{{totalCount}}）</view>
    <view class="weui-cells weui-cells_after-title">


      <navigator wx:for="{{acceptors}}" wx:key="{{item._id}}" url="../detail/detail?id={{item._id}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <image wx:if="{{true}}" src="/images/user_aaaaaa.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">{{item.name}}</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </navigator>
    </view>

    <view class="weui-btn-area">
      <button wx:if="{{inputVal}}" class="weui-btn" type="primary" bindtap="addAcceptor">创建受赠者【{{inputVal}}】</button>
      <button wx:if="{{!inputVal}}" class="weui-btn" type="primary" bindtap="addAcceptor">创建受赠者</button>
    </view>

    <include src="../../footer.wxml" />
  </view>
</view>